# Frontend Environment Variables
# Copy this file to .env and update the values

# Backend API URL
# Development
VITE_API_BASE_URL=http://localhost:4000

# Production (update to your actual backend domain)
# VITE_API_BASE_URL=https://your-backend-domain.com

# Debug Mode
# Set to true for development, false for production
VITE_DEBUG_MODE=true

# App Configuration
VITE_APP_TITLE=Mini Workflow Automation
VITE_APP_DESCRIPTION=AI-powered workflow automation with authentication

# API Endpoints
VITE_API_WORKFLOW_ENDPOINT=/run-workflow
VITE_API_HISTORY_ENDPOINT=/history
VITE_API_DELETE_HISTORY_ENDPOINT=/history
VITE_API_DELETE_ALL_HISTORY_ENDPOINT=/history

# Environment
NODE_ENV=development

# Debug Settings
VITE_LOG_LEVEL=info

# Features
VITE_ENABLE_HISTORY=true
VITE_ENABLE_MODAL=true
VITE_ENABLE_ANIMATIONS=true